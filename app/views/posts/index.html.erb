<h1>Listing posts</h1>
 <%= link_to 'New post', new_post_path %>
<table>
  <tr>
    <th>Title</th>
    <th>description</th>
    <th>code</th>
    <th>user_id</th>
  </tr>
 
  <% @posts.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.desc %></td>
      <td><%= article.code %></td>
      <td><%= article.user_id %></td>
      <td><%= link_to 'Show', post_path(article) %></td>
      <td><%= link_to 'Edit', edit_post_path(article) %></td>
      <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @posts %>
