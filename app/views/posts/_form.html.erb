
<%= form_for @post do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :desc %>
  </p>
 <p>
    <%= f.label :code %><br>
    <%= f.text_area :code %>
  </p>

<p>
<%= f.label :User %><br>  

<%= f.select :user_id, options_for_select(@users.collect{ |u| [u.name, u.id] }) %>


</p>


  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>