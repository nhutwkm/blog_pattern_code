<center>
<h1>Listing Posts</h1>


<form method="get">
  <select name="username">
    <option value="-1">&nbsp;</option>
    <% @users.each do |user|%>
    <option value=<%=user.name%>><%=user.name%></option>
    <% end%>
  </select>
  <input type="submit" value="Search">  
</form>



<table border="1" style="width:50%">
  <thead>  
    <tr>
      <th>id</th>
      <th><th>Title</th></th>
      <th><th>Description</th></th>
      <th><th>User</th></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts_of_user.each do |post| %>
      <tr>
      	<td><%= @id=post.id %></td>
      	<td><td><%= post.title %></td></td>
      	<td><td><%= post.desc %></td></td>
        <td><td><%= User.find_by(id: post.user_id).name %></td></td>

        <td><%= link_to 'edit', "/edit?id=#{@id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @posts_of_user %>
</center>




