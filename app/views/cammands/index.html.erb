<p id="notice"><%= notice %></p>

<h1>Listing Cammands</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Id user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cammands.each do |cammand| %>
      <tr>
        <td><%= cammand.title %></td>
        <td><%= cammand.description %></td>
        <td><%= cammand.id_user %></td>
        <td><%= link_to 'Show', cammand %></td>
        <td><%= link_to 'Edit', edit_cammand_path(cammand) %></td>
        <td><%= link_to 'Destroy', cammand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

